#include<iostream>
#include<string>

using namespace std;

int main() 
{
    //char text[20];
    string text;
    bool isValid = true;

    cout << "Enter the string:" << endl;
    cin >> text;

    if ((text.size() % 2) == 0) {
        for (int i = 0; i < text.size(); i++) {
            int count = 0;  

            for (int j = 0; j < text.size(); j++) {
                if (text[i] == text[j]) {
                    count++;
                }
            }

            if (count != 2) {
                
                isValid = false;
                break;  
            }
        }

        if (isValid) {
            cout << text << " is a valid string" << endl;
        } else {
            cout << text << " is not a valid string" << endl;
        }
    } else {
        cout << text << " is an incorrect input" << endl;
    }

    return 0;
}
